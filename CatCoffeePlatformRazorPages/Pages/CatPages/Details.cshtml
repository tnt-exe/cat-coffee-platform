@page
@using BusinessObject.Enums
@model CatCoffeePlatformRazorPages.Pages.CatPages.DetailsModel

@{
    ViewData["Title"] = "Cat Details";
}

<h1>Cat Details</h1>

<div>
    <h4>Cat</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cat.CatName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cat.CatName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cat.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cat.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cat.HealthyStatus)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Cat.HealthyStatus == (int)CatStatus.Healthy)
            {
                <span class="badge bg-success">Healthy</span>
            }
            else if (Model.Cat.HealthyStatus == (int)CatStatus.Sick)
            {
                <span class="badge bg-warning">Sick</span>
            }
            else
            {
                <span class="badge bg-danger">Dead</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cat.Area)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cat.Area)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cat.CoffeeShop)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cat.CoffeeShop)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Cat?.CatId" class="btn btn-primary">Edit</a> |
    <a asp-page="./Index" class="btn btn-primary">Back</a>
</div>
