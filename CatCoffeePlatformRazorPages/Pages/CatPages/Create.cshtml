@page "/catpages/create"
@model CatCoffeePlatformRazorPages.Pages.CatPages.CreateModel

@{
    ViewData["Title"] = "Create Cat";
}

<div class="row justify-content-center">
    <div class="card col-md-4 p-3">
        <h1 class="text-center">Cat</h1>
        <hr />

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Cat.CatName" class="control-label"></label>
                <input asp-for="Cat.CatName" class="form-control" />
                <span asp-validation-for="Cat.CatName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Cat.Description" class="control-label"></label>
                <input asp-for="Cat.Description" class="form-control" />
                <span asp-validation-for="Cat.Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Cat.HealthyStatus" class="control-label"></label>
                <select asp-for="Cat.HealthyStatus" class="form-control" asp-items="ViewBag.CatStatus"></select>
                <span asp-validation-for="Cat.HealthyStatus" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Cat.AreaId" class="control-label"></label>
                <select asp-for="Cat.AreaId" class="form-control" asp-items="ViewBag.AreaId"></select>
            </div>
            <input type="hidden" asp-for="Cat.CoffeeShopId" value="@ViewData["shopId"]" />
            <div class="form-group mb-3 d-flex justify-content-end">
                <input type="submit" value="Create" class="btn btn-primary me-3" />
                <a asp-page="/CoffeeShopPages/Details" asp-route-id="@ViewData["shopId"]" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
