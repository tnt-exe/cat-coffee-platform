@page
@model CatCoffeePlatformRazorPages.Pages.TimeFramePages.CreateModel

@{
    ViewData["Title"] = "Time Frame Create";
}

<h1>Time Frame Create</h1>

<h4>TimeFrame</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TimeFrame.StartTime" class="control-label"></label>
                <input asp-for="TimeFrame.StartTime" class="form-control" />
                <span asp-validation-for="TimeFrame.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeFrame.EndTime" class="control-label"></label>
                <input asp-for="TimeFrame.EndTime" class="form-control" />
                <span asp-validation-for="TimeFrame.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeFrame.Price" class="control-label"></label>
                <input asp-for="TimeFrame.Price" class="form-control" />
                <span asp-validation-for="TimeFrame.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeFrame.CoffeeShopId" class="control-label"></label>
                <select asp-for="TimeFrame.CoffeeShopId" class ="form-control" asp-items="ViewBag.CoffeeShopId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" class="btn btn-primary">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
