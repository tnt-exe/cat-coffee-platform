@page "/timeframes/edit"
@model CatCoffeePlatformRazorPages.Pages.TimeFramePages.EditModel

@{
    ViewData["Title"] = "Edit Timeframe";
}

<div class="row justify-content-center">
    <div class="card col-md-4 p-3">
        <h1 class="text-center">Edit</h1>
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TimeFrame.TimeFrameId" />
            <div class="form-group mb-3">
                <label asp-for="TimeFrame.StartTime" class="control-label"></label>
                <input asp-for="TimeFrame.StartTime" type="time" class="form-control" />
                <span asp-validation-for="TimeFrame.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TimeFrame.EndTime" class="control-label"></label>
                <input asp-for="TimeFrame.EndTime" type="time" class="form-control" />
                <span asp-validation-for="TimeFrame.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TimeFrame.Price" class="control-label"></label>
                <input asp-for="TimeFrame.Price" class="form-control" />
                <span asp-validation-for="TimeFrame.Price" class="text-danger"></span>
            </div>
            <div class="form-group my-3 d-flex justify-content-end">
                <input type="submit" value="Save" class="btn btn-primary me-3" />
                <a asp-page="/CoffeeShopPages/Details" asp-route-id="@ViewData["shopId"]" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
