@page "/productpages"
@model CatCoffeePlatformRazorPages.Pages.ProductPages.IndexModel

@{
    ViewData["Title"] = "Product List";
}

<div class="container" style="min-height: 44vh;">
    <h1 style="text-align: center;">Product</h1>

    <p class="button">
        <a asp-page="create" asp-route-shopId="@ViewData["shopId"]" class="btn btn-primary">Create</a>
    </p>

    <div class="card" id="main-table">
        @if (Model.Product is null || !Model.Product.Any())
        {
            <h3 class="alert alert-info text-center">No Products Found</h3>
        }
        else
        {
            <table class="table table-striped d-sm-table">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Unit</th>
                        <th>Category</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Product)
                    {
                        <tr>
                            <td>@product.ProductName</td>
                            <td>@product.Price</td>
                            <td>@product.Quantity</td>
                            <td>@product.Unit</td>
                            <td>@product.Category?.CategoryName</td>
                            <td>
                                <a asp-page="./edit" asp-route-productId="@product.ProductId" 
                                    asp-route-shopId="@ViewData["shopId"]" class="btn btn-primary btn-sm">Edit</a>
                                <a asp-page="./details" asp-route-productId="@product.ProductId" 
                                    asp-route-shopId="@ViewData["shopId"]" class="btn btn-info btn-sm">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
